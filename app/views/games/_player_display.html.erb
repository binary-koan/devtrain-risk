<div class="player-display">
  <% @game.players.each do |player| %>
    <div>
      <span class="player-icon"
        style="background-color: <%= player_color(@game, player) %>"></span>
      <% if @turn.player == player %>
        *
      <% end %>
      <%= player.name %>
    </div>
  <% end %>
</div>
