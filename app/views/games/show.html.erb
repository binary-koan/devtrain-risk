<h1>Game <%= @game.id %></h1>

<div id="game-display"></div>

<% if @turn.game_state.won? %>
  <div><%= @turn.game_state.winning_player.name %> won the game!</div>
<% else %>
  <div class="controls">
    <% @turn.allowed_events.each do |event| %>
      <%= render "form_#{event.event_type}", event: event %>
    <% end %>
  </div>
<% end %>
