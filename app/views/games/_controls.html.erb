<div class="controls">
  <%= form_for [@game, Event.attack] do |f| %>
    <div class="content">
      <%= f.hidden_field :event_type %>
      t <%= text_field_tag :from, "", autofocus: true %> =>
      t <%= text_field_tag :to %>
      <%= f.submit "Attack" %>
    </div>
  <% end %>

  <%= form_for [@game, Event.fortify] do |f| %>
    <div class="content">
      <%= f.hidden_field :event_type %>
      t <%= text_field_tag :from, "", autofocus: true %> =>
      t <%= text_field_tag :to %>
      <%= f.submit "Fortify" %>
    </div>
  <% end %>

  <%= form_for [@game, Event.reinforce] do |f| %>
    <div class="content">
      <%= f.hidden_field :event_type %>
      <%= text_field_tag :count, "", autofocus: true %> units =>
      t <%= text_field_tag :to %>
      <%= f.submit "Reinforce" %>
    </div>
  <% end %>

  <%= form_for [@game, Event.start_turn] do |f| %>
    <%= f.hidden_field :event_type %>
    <%= f.submit "End turn" %>
  <% end %>
</div>
