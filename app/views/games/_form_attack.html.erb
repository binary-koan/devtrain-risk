<%= form_for [@game, event], html: { autocomplete: "off" } do |f| %>
  <%= f.hidden_field :event_type %>
  Attack with <%= number_field_tag :units, "" %> units
  from <%= select_tag :from, options_for_select(owned_territory_names(@turn)) %>
  to <%= select_tag :to, options_for_select(enemy_territory_names(@turn)) %>
  <%= button_tag type: "submit", class: "icon-button" do %>
    <%= icon("attack") %> Attack
  <% end %>
<% end %>
