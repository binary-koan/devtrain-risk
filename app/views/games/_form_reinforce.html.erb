<p>
  <%= event.action.units %> <%= "reinforcements".pluralize(event.action.units) %> available.
</p>

<%= form_for [@game, event], html: { autocomplete: "off" } do |f| %>
  <%= f.hidden_field :event_type %>
  Place <%= number_field_tag :units, "" %> units
  on <%= select_tag :to, options_for_select(owned_territory_names(@game_state)) %>
  <%= button_tag type: "submit", class: "icon-button" do %>
    <span class="not-in-progress"><%= icon("reinforce") %> Reinforce</span>
    <%= hidden_progress_spinner %>
  <% end %>
<% end %>
